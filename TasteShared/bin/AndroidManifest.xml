<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tasteshared"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tasteshared.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.tasteshared.login.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tasteshared.function.GoodsDetailsActivity"
            android:label="@string/title_activity_goods_details" >
        </activity>
        <activity
            android:name="com.tasteshared.login.RegisteredActivity"
            android:label="@string/title_activity_registered" >
        </activity>
        <activity
            android:name="com.tasteshared.login.EnterActivity"
            android:label="@string/title_activity_enter" >
        </activity>
    </application>

</manifest>
