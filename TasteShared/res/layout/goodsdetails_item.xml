<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/GoodsDetailsChosoe"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_below="@+id/GoodsDetails"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >

        <LinearLayout
            android:id="@+id/GoodsDetailsChooseWay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
             >

            <RelativeLayout
                android:id="@+id/GoodsDetailsOrder"
                android:layout_width="50.0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="确认接单"
                    android:textColor="#88d4cc"
                    android:textSize="15.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0.50dp"
                android:layout_height="match_parent"
                android:background="#aaaaaa" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/GoodsDetailsCancleOrder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="取消"
                    android:textColor="#535353"
                    android:textSize="15.0sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/GoodsDetailsComplete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="完成制作"
                android:textColor="#88d4cc"
                android:textSize="20.0sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa" />

        <RelativeLayout
            android:id="@+id/GoodsDetailsWaitingForThePickup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" 
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="等待取货"
                android:textColor="#88d4cc"
                android:textSize="20.0sp" 
                 />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/GoodsDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/GoodsDetailsUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="10.0dp"
            android:gravity="left|center"
            android:text="联系人: 王先生"
            android:textColor="#808080"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/GoodsDetailsLine_1"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_below="@+id/GoodsDetailsUserName"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="10.0dp"
            android:background="#aaaaaa" />

        <TextView
            android:id="@+id/GoodsDetailsUserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/GoodsDetailsUserName"
            android:layout_below="@+id/GoodsDetailsUserName"
            android:layout_marginTop="20.0dp"
            android:gravity="left|center"
            android:text="联系电话: 18059866229"
            android:textColor="#808080"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/GoodsDetailsLine_2"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_below="@+id/GoodsDetailsUserPhone"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="10.0dp"
            android:background="#aaaaaa" />

        <TextView
            android:id="@+id/GoodsDetailsUserAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/GoodsDetailsUserPhone"
            android:layout_below="@+id/GoodsDetailsUserPhone"
            android:layout_marginTop="20.0dp"
            android:gravity="left|center"
            android:text="收货地址:大唐.五缘YOHOC楼2214"
            android:textColor="#808080"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/GoodsDetailsLine_3"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_below="@+id/GoodsDetailsUserAddress"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="10.0dp"
            android:background="#aaaaaa" />

        <TextView
            android:id="@+id/GoodsDetailsOnlinePayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/GoodsDetailsUserAddress"
            android:layout_below="@+id/GoodsDetailsUserAddress"
            android:layout_marginTop="20.0dp"
            android:gravity="left|center"
            android:text="付款方式:   在线支付"
            android:textColor="#808080"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/GoodsDetailsLine_4"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_below="@+id/GoodsDetailsOnlinePayment"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="10.0dp"
            android:background="#aaaaaa" />

        <TextView
            android:id="@+id/GoodsDetailsNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/GoodsDetailsOnlinePayment"
            android:layout_below="@+id/GoodsDetailsOnlinePayment"
            android:layout_marginTop="20.0dp"
            android:text="备注:"
            android:textColor="#808080"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/GoodsDetailsLine_5"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_below="@+id/GoodsDetailsNote"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="10.0dp"
            android:background="#aaaaaa" />

        <TextView
            android:id="@+id/GoodsDetailsTransportTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/GoodsDetailsNote"
            android:layout_below="@+id/GoodsDetailsNote"
            android:layout_marginTop="20.0dp"
            android:text="送达时间: 2015-11-26  11:33"
            android:textColor="#808080"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/GoodsDetailsLine_6"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_below="@+id/GoodsDetailsTransportTime"
            android:layout_marginTop="10.0dp"
            android:background="#aaaaaa" />

        <ImageView
            android:id="@+id/GoodsDetailsCancle"
            android:layout_width="130.0dp"
            android:layout_height="130.0dp"
            android:layout_alignBottom="@+id/GoodsDetailsNote"
            android:layout_alignRight="@+id/GoodsDetailsTransportTime"
            android:src="@drawable/cancle"
            android:visibility="gone"
             />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20.0dp"
        android:layout_below="@+id/GoodsDetailsChosoe"
        android:layout_centerHorizontal="true"
        android:background="#efefef" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa" />
    </RelativeLayout>

</RelativeLayout>