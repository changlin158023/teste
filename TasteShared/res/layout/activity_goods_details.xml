<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".GoodsDetailsActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/GoodsDetailsNumbers"
            android:layout_width="80.0dp"
            android:layout_height="44.0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5.0dp"
            android:layout_marginRight="5.0dp"
            android:layout_marginTop="5.0dp"
            android:background="#efefef" >

            <TextView
                android:id="@+id/GoodsDetailsNumbersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="4份"
                android:textColor="#535353"
                android:textSize="30.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/GoodsDetailsLayout"
            android:layout_width="match_parent"
            android:layout_height="44.0dp"
            android:layout_alignBottom="@+id/GoodsDetailsNumbers"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/GoodsDetailsNumbers"
            android:layout_toLeftOf="@+id/GoodsDetailsNumbers" >
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35.0dp"
                android:text="订单详情"
                android:textColor="#000000"
                android:textSize="20.0sp" />

            <TextView
                android:id="@+id/GoodsDetailsBack"
                android:layout_width="65.0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="返回"
                android:textColor="#959595"
                android:textSize="13.0sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/GoodsDetailsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true" >

        </ListView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_below="@+id/GoodsDetailsLayout"
            android:layout_centerHorizontal="true"
            android:background="#aaaaaa"
            android:layout_marginTop="5.0dp"
             />

    </RelativeLayout>

</RelativeLayout>